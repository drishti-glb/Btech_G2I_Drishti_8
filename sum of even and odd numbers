#include <stdio.h>
int main()
{
    int i,j,even=0,odd=0;
    
    printf("enter the number:");
    scanf("%d",&i);
    
    for(j=0;j<=i;j++)
    {
        if(j%2==0)
        {
           even=even+j;
        }
    else
    {
        odd=odd+j;
    }
    }
        printf("The sum of even numbers is: %d\n",even);
        printf("The sum of odd numbers is: %d",odd);

    return 0;
}
