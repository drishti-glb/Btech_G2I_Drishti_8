#include <stdio.h>
#include <math.h>
int main()
{
    int i, n, r, num,c, sum;
    printf("The armstrong numbers from 1 upto 100 are:\n");
    for(i=1;i<=100;i++)
    {
        sum=0;
        c=0;
        num=i;
        n=num;
    while(n>0)
    {
    n=n/10;
    c++;
    }
    while(num>0)
    {
        r=num%10;
        sum=sum+pow(r,c);
        num=num/10;
    }
    if(sum==i)
    printf("%d ",i);
}
return 0;
}
